{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":pinAllExceptPeerDependencies"
	],
	"packageRules": [
		{
			"matchDatasources": ["npm"],
			"minimumReleaseAge": "3 days",
			"internalChecksFilter": "strict"
		},
		{
			"matchUpdateTypes": ["minor", "patch", "pin", "digest"],
			"automerge": true
		}
	]
}
